{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src", "next-env.d.ts", "**/*.ts", "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
